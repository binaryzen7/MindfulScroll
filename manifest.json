{
  "manifest_version": 3,
  "name": "MindfulScroll",
  "version": "1.0.0",
  "description": "Break free from infinite scrolling. Get mindful reminders after spending time on social media.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "MindfulScroll Settings"
  }
}
